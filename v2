        function generateGalleryHTML(images) {
            let html = '';
            images.forEach((src, index) => {
                const isMainImage = index === 0;
                const sizeClass = isMainImage ? 'col-span-1 sm:col-span-2' : 'col-span-1';
                const heightClass = isMainImage ? 'h-72 sm:h-96' : 'h-48';

                html += `
                    <div class="${sizeClass} ${heightClass} bg-gray-100 rounded-lg overflow-hidden shadow-lg border-2 border-primary-blue/10 transform hover:scale-[1.01] transition duration-300">
                        <img src="${src}" 
                             onerror="this.onerror=null; this.src='https://placehold.co/600x400/cccccc/666666?text=Image+Unavailable';"
                             alt="Project Sample ${index + 1}" 
                             class="w-full h-full object-cover transition duration-500 hover:opacity-90"/>
                    </div>
                `;
            });
            return html;
        }

        function openModal(projectId) {
            const project = projectData[projectId];
            if (!project) return;

            // Populate the modal content
            document.getElementById('modal-title').textContent = project.title;
            document.getElementById('modal-subtitle').textContent = project.subtitle;
            document.getElementById('modal-gallery').innerHTML = generateGalleryHTML(project.images);
            
            // Show the modal and hide scroll on body
            const modal = document.getElementById('project-modal');
            modal.classList.add('open');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            const modal = document.getElementById('project-modal');
            modal.classList.remove('open');
            // Only restore scroll if the splash screen has been removed
            if (!document.getElementById('splash-screen')) {
                document.body.style.overflow = 'auto'; 
            }
        }
        
        // -----------------------------------------------------------------
        // SPLASH SCREEN LOGIC
        // -----------------------------------------------------------------

        const splashScreen = document.getElementById('splash-screen');
        const splashText = document.getElementById('splash-text');
        const mainContent = document.getElementById('main-content');
        let flashCount = 0;
        const totalFlashes = 2; // How many times the text flashes

        function flashText(callback) {
            if (flashCount < totalFlashes) {
                setTimeout(() => {
                    // Fade in
                    splashText.classList.remove('opacity-0'); 
                    setTimeout(() => {
                        // Fade out
                        splashText.classList.add('opacity-0'); 
                        flashCount++;
                        flashText(callback);
                    }, 700); // Text visible duration
                }, 300); // Delay before next flash
            } else {
                // Wait a moment after the last flash fade-out before starting the transition
                setTimeout(callback, 500); 
            }
        }

        function startPortfolio() {
            mainContent.classList.remove('hidden'); // 1. Show main content
            
            // 2. Start the splash screen fade out
            splashScreen.classList.add('opacity-0');

            // 3. Remove the splash screen after transition completes (1000ms)
            setTimeout(() => {
                splashScreen.remove();
                document.body.style.overflow = 'auto'; // Restore scroll
            }, 1000); 
        }

        document.addEventListener('DOMContentLoaded', () => {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            if (mobileMenuButton) {
                mobileMenuButton.addEventListener('click', () => {
                    mobileMenu.classList.toggle('hidden');
                });
            }
            
            // Close modal when pressing the Escape key (existing logic)
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && document.getElementById('project-modal').classList.contains('open')) {
                    closeModal();
                }
            });

            // Execute the splash screen sequence
            document.body.style.overflow = 'hidden'; // Prevent initial scrolling
            flashText(startPortfolio);
        });
    </script>
</body>
